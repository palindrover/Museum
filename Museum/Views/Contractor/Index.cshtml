@model IEnumerable<Contractor>

<table >
    <tr>
        <th>ID</th>
        <th>Компания</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Телефон</th>
        <th>Почта</th>
        <th>Действия</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Companyname</td>
            <td>@item.Surname</td>
            <td>@item.Name</td>
            <td>@item.Patrname</td>
            <td>@item.Tel</td>
            <td>@item.Email</td>
            <td>
                <a asp-action="Edit" asp-controller="Contractor" asp-route-id="@item.Id">Изменить</a>
                <form asp-action="Delete" asp-controller="Contractor" asp-method="post" asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" OnClick='return confirm("Вы действительно хотите удалить этого контрагента?");' />
                </form>
            </td>
        </tr>
    }
</table>

<br />

<a asp-controller="Contractor" asp-action="Add">Добавить контрагента</a>